        function goHome() {
            showScreen('home-screen');
        }

        function showCart() {
            renderCart();
            showScreen('cart-screen');
        }

        function goBackToMenu() {
            if(document.getElementById('rest-name').innerText !== "Restaurant Name") {
                showScreen('menu-screen');
            } else {
                goHome();
